pipeline {
    agent none
    stages {
        stage('test') {
            agent {
                docker {image 'maven:3.8.1-adoptopenjdk-11'}
            }
            steps {
                sh 'mvn --version'
            }
        }
        stage('front-end') {
            agent {
                docker {image 'node:16-alpine'}
        }
            steps {
               sh 'node --version'
            }
        }
    }
}
